{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Our Player",
            "type": "shell",
            "command": "./compile-player.sh",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },

        {
            "label": "Build Game Engine",
            "type": "shell",
            "command": "./compile-game-engine.sh",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },

        {
            "label": "Build Dots and Boxes",
            "dependsOn": ["Build Game Engine", "Build Our Player"],

            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
