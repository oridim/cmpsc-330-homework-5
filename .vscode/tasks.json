{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Dots and Boxes",
            "type": "cppbuild",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-ansi",
                "-pedantic",
                "-std=c++14",
                "-Wall",
                "-g",
                "${workspaceFolder}/basic_strategy_ai_player.cxx",
                "${workspaceFolder}/game_configuration.cxx",
                "${workspaceFolder}/game_board.cxx",
                "${workspaceFolder}/game_board_slot.cxx",
                "${workspaceFolder}/game_data.cxx",
                "${workspaceFolder}/game_result.cxx",
                "${workspaceFolder}/game_session.cxx",
                "${workspaceFolder}/player_move.cxx",
                "${workspaceFolder}/player_result.cxx",
                "${workspaceFolder}/player_turn.cxx",
                "${workspaceFolder}/random_ai_player.cxx",
                "${workspaceFolder}/main.cxx",
                "-o",
                "${workspaceFolder}/dotsandboxes"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: g++"
        },

        {
            "label": "Build Active C++ File",
            "type": "cppbuild",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-ansi",
                "-pedantic",
                "-std=c++14",
                "-Wall",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": ["$gcc"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "compiler: g++"
        }
    ]
}
