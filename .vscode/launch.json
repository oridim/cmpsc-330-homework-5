{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Dots and Boxes",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/dotsandboxes",
            "args": [
                "<",
                "./Test Cases/GameConfiguration/configuration.professor-supplied.txt"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Build Dots and Boxes"
        },

